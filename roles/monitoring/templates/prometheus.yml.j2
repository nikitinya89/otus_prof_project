global:
  scrape_interval: 10s
scrape_configs:
  - job_name: 'prometheus_master'
    scheme: https
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets:
        - {{ frontend_srv }}:9100
        - {{ backend_1_srv }}:9100
        - {{ backend_2_srv }}:9100
        - {{ db_master_srv }}:9100
        - {{ db_slave_srv }}:9100
        - {{ monitoring_srv }}:9100
        - {{ log_srv }}:9100

  - job_name: 'mysqld_exporter'
    static_configs:
      - targets:
        - {{ db_master_srv }}:9104
        - {{ db_slave_srv }}:9104

  - job_name: 'nginx_exporter'
    static_configs:
      - targets:
        - {{ frontend_srv }}:9113

rule_files:
  - 'mysql_exporter_recording_rules.yml'
