global:
  resolve_timeout: 5m
route:
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 1m
  repeat_interval: 5m
  receiver: 'email'

receivers:
- name: 'email'
  email_configs:
  - to: {{ alert_email }}
    from: {{ alert_email }}
    smarthost: {{ alert_email_smtp }}
    auth_username: {{ alert_email }}
    auth_identity: {{ alert_email }}
    auth_password: {{ alert_email_password }}
    send_resolved: true
