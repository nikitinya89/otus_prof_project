upstream backend {
        server {{ backend_1_srv }}:443;
        server {{ backend_2_srv }}:443;
}

server {
        listen				80;
        listen				443 ssl;
        server_name			{{ frontend_srv }};
        ssl_certificate			/etc/nginx/ssl/{{ frontend_srv }}/fullchain.pem;
        ssl_certificate_key		/etc/nginx/ssl/{{ frontend_srv }}/privkey.pem;
	ssl_prefer_server_ciphers	off;
	ssl_protocols			TLSv1.2 TLSv1.3;
	ssl_ciphers			ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384:DHE-RSA-CHACHA20-POLY1305;
	ssl_early_data			on;
	ssl_session_tickets		on;
	ssl_session_timeout		1h;
	ssl_session_cache		shared:SSL:10m;

        root		/var/www/html;
        index index.html index.htm index.nginx-debian.html;
        location / {
                proxy_pass https://backend;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Real-IP $remote_addr;
        }

}

server {
        listen                          80 default_server;
        listen                          443 ssl;
        server_name                     {{ public_name }};
        ssl_certificate                 /etc/nginx/ssl/{{ public_name }}/fullchain.pem;
        ssl_certificate_key             /etc/nginx/ssl/{{ public_name }}/privkey.pem;
        ssl_prefer_server_ciphers       off;
        ssl_protocols                   TLSv1.2 TLSv1.3;
        ssl_ciphers                     ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384:DHE-RSA-CHACHA20-POLY1305;
        ssl_early_data                  on;
        ssl_session_tickets             on;
        ssl_session_timeout             1h;
        ssl_session_cache               shared:SSL:10m;

        root            /var/www/html;
        index index.html index.htm index.nginx-debian.html;
        location / {
                proxy_pass https://backend;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Real-IP $remote_addr;
        }

}
